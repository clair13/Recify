<div id="<%= dom_id step %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= step.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this step", step, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this step', edit_step_path(step), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
